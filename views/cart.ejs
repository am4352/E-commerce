<%- include('./partials/header') %>

<div class="w-full min-h-screen flex flex-col md:flex-row items-start px-5 md:px-20 py-10 gap-10">
    
    <!-- Cart Items Section -->
    <div class="w-full md:w-[60%] flex flex-col gap-5">
        <% cartItems.forEach(function(item) { %>
        <div class="bg-white shadow-lg rounded-lg overflow-hidden p-4 flex flex-col sm:flex-row items-center">
            
            <!-- Product Image -->
            <div class="w-full sm:w-1/3 flex items-center justify-center">
                <img class="h-40 object-cover rounded-md shadow-md" src="data:image/png;base64,<%= item.imageBase64 %>" alt="Product Image">
            </div> 

            <!-- Product Details -->
            <div class="w-full sm:w-2/3 p-5 flex flex-col gap-3">
                <div class="flex justify-between">
                    <h3 class="text-xl font-semibold"><%= item.name %></h3>
                    <h4 class="text-lg font-bold text-green-600">₹ <%= item.price %></h4>
                </div>
                
                <!-- Quantity Section -->
                <div class="flex items-center gap-3">
                    <button class="w-8 h-8 flex items-center justify-center bg-gray-200 rounded-full">
                        <i class="ri-subtract-line"></i>
                    </button>
                    <span class="px-4 py-1 bg-gray-200 rounded-md">1</span>
                    <button class="w-8 h-8 flex items-center justify-center bg-gray-200 rounded-full">
                        <i class="ri-add-line"></i>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>
    </div>

    <!-- Price Breakdown Section -->
    <div class="w-full md:w-[40%] bg-gray-100 p-5 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold mb-5">Price Breakdown</h3>
        
        <div class="space-y-3">
            <div class="flex justify-between">
                <h4>Total MRP</h4>
                <h4><%=totalAmount %></h4>
            </div>
            <div class="flex justify-between">
                <h4>Discount on MRP</h4>
                <h4 class="text-red-500">₹ 0</h4>
            </div>
            <div class="flex justify-between">
                <h4>Platform Fee</h4>
                <h4>₹ 0</h4>
            </div>
            <div class="flex justify-between">
                <h4>Shipping Fee</h4>
                <h4 class="text-green-600">FREE</h4>
            </div>
        </div>

        <hr class="my-4 border-gray-300">

        <div class="flex justify-between text-lg font-bold">
            <h3>Total Amount</h3>
            <h3 class="text-green-600"><%=totalAmount %></h3>
        </div>

        <button class="mt-5 w-full py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700">
            Proceed to Checkout
        </button>
    </div>
</div>

<%- include('./partials/footer') %>
